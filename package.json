{
  "name": "mojito-mixers",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mojitoinc/mixers-hooks.git"
  },
  "scripts": {
    "init": "yarn global add gulp webpack-cli && yarn install && yarn run clean && yarn run bootstrap && yarn run build",
    "start": "yarn run dev",
    "dev": "dumi dev",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean --yes",
    "build": "lerna run build",
    "test": "jest",
    "lint": "eslint --ignore-pattern **/__tests__/* --ignore-pattern **/demo/* \"packages/*/src/**/*.{ts,tsx}\"",
    "build:doc": "dumi build",
    "pub:doc": "yarn run build:doc",
    "pub": "yarn run build && lerna publish",
    "pub:beta": "yarn run build && lerna publish --dist-tag beta"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@testing-library/react": "^10.0.4",
    "@testing-library/react-hooks": "^2.0.1",
    "@types/jest": "^26.0.1",
    "babel-loader": "^8.1.0",
    "babel-plugin-import": "^1.12.0",
    "babel-plugin-transform-async-to-promises": "^0.8.15",
    "del": "^5.1.0",
    "dumi": "^1.1.7",
    "enzyme": "^3.10.0",
    "eslint": "^7.2.0",
    "eslint-plugin-react-hooks": "^4.0.8",
    "fast-glob": "^3.2.11",
    "fs-extra": "^10.0.1",
    "gray-matter": "^4.0.3",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-fetch-mock": "^3.0.3",
    "jest-localstorage-mock": "^2.4.18",
    "lerna": "4.x",
    "mockdate": "^3.0.2",
    "mockjs": "^1.1.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-drag-listview": "^0.1.6",
    "react-test-renderer": "^16.13.1",
    "ts-jest": "^26.1.0",
    "typescript": "^4.1.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.10",
    "webpack-merge": "^4.2.2"
  }
}
